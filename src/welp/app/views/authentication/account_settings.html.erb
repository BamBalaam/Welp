<h1>Account Settings</h1>

<%= form_tag({controller: 'authentication', action: 'set_account_info', url: 'account_settings'}, method: 'put') do %>
  <div class="form-group">
    <%=label_tag(:username, "Change nickname:") %>
    <%=text_field_tag :username, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:email, "Change email address:") %>
    <%=email_field_tag :email, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:password, "Current password:") %>
    <%=password_field_tag :old_password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:password, "New password:") %>
    <%=password_field_tag :new_password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:password_conf, "Password confirmation:") %>
    <%=password_field_tag :password_conf, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Update account', class: "btn btn-primary btn-lg" %>&nbsp;&nbsp;&nbsp;
    <%= submit_tag 'Clear Form', :type => 'reset', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
