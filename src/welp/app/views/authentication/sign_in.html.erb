<h1>Sign In</h1>

<%= form_tag({controller: 'authentication', action: 'sign_in', url: 'sign_in'}, method: 'post') do %>
  <div class="form-group">
    <%=label_tag(:username, "Nickname:") %>
    <%=text_field_tag :username, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:password, "Password:") %>
    <%=password_field_tag :password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Sign In', class: "btn btn-primary btn-lg" %>&nbsp;&nbsp;&nbsp;
    <%= submit_tag 'Clear Form', :type => 'reset', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
