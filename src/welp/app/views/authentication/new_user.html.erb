<h1>Sign Up</h1>

<%= form_tag({controller: 'authentication', action: 'register', url: 'new_user'}, method: 'post') do %>
  <div class="form-group">
    <%=label_tag(:username, "Nickname:") %>
    <%=text_field_tag :username, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:email, "Email address:") %>
    <%=email_field_tag :email, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:password, "Password:") %>
    <%=password_field_tag :password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=label_tag(:password_conf, "Password confirmation:") %>
    <%=password_field_tag :password_conf, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Sign Up', class: "btn btn-primary btn-lg" %>&nbsp;&nbsp;&nbsp;
    <%= submit_tag 'Clear Form', :type => 'reset', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
